<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BottomNavigationViewPagger2Retrofit2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NasaPictureOfTheDay" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.NasaPictureOfTheDayCosmic" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimarySpace</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSpace</item>
        <item name="colorAccent">@color/colorPrimarySpace</item>
    </style>

    <style name="Theme.NasaPictureOfTheDayMoon" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryMoon</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMoon</item>
        <item name="colorAccent">@color/colorPrimaryMoon</item>
    </style>

    <style name="Theme.NasaPictureOfTheDayMars" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryMars</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMars</item>
        <item name="colorAccent">@color/colorPrimaryMars</item>
    </style>

    <style name="settings_choose_theme_chip_group_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipSpacingHorizontal">@dimen/settings_choose_theme_chip_spacing_horizontal</item>
        <item name="chipSpacingVertical">@dimen/settings_choose_theme_chip_spacing_vertical</item>
        <item name="singleLine">false</item>
        <item name="singleSelection">true</item>
    </style>

    <style name="settings_choose_theme_chip_group_themes_style" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/chip_text_style_appearance</item>
    </style>

    <style name="chip_text_style_appearance">
        <item name="android:textSize">@dimen/main_image_selection_chips_group_text_size</item>
        <item name="android:textColor">@color/main_image_selection_chips_group_text_color</item>
    </style>

    <style name="settings_choose_theme_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/settings_layout_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>